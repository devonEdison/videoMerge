<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:background="#ffffffff" android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_margin="10dip"
        android:orientation="vertical"
         android:gravity="center">

	    <LinearLayout android:weightSum="5" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"
	         android:gravity="center">
	        <TextView 
				android:id="@+id/url1" 
	            android:gravity="center_vertical|right" 
	            android:layout_margin="10.0dip"
	            android:layout_weight="2"
	            android:layout_width="100dp" 
	            android:layout_height="wrap_content"
	            android:textSize="20sp" 
	            android:hint="活動網站" />
	        
	        <TextView 
				android:id="@+id/url2" 
	            android:gravity="center_vertical"
	            android:layout_weight="3" 
	            android:layout_margin="10.0dip" 
	            android:textColor="#ff0071ba"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:textSize="20sp" 
	            android:hint="使用者名稱" />
	        
        </LinearLayout>
        
	    <LinearLayout android:weightSum="5" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"
	         android:gravity="center">
	        <TextView 
				android:id="@+id/username1" 
	            android:gravity="center_vertical|right" 
	            android:layout_margin="10.0dip"
	            android:layout_weight="2"
	            android:layout_width="100dp" 
	            android:layout_height="wrap_content"
	            android:textSize="20sp" 
	            android:hint="姓名" />
	        
	        <TextView 
				android:id="@+id/username2" 
	            android:gravity="center_vertical"
	            android:layout_weight="3" 
	            android:layout_margin="10.0dip" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:textSize="20sp" 
	            android:hint="使用者名稱" />
	        
        </LinearLayout>
        
	    <LinearLayout android:weightSum="5" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"
	         android:gravity="center">
	        <TextView 
				android:id="@+id/tel1" 
	            android:gravity="center_vertical|right" 
	            android:layout_margin="10.0dip"
	            android:layout_weight="2"
	            android:layout_width="100dp" 
	            android:layout_height="wrap_content"
	            android:textSize="20sp" 
	            android:hint="手機號碼" />
	        
	        <TextView 
				android:id="@+id/tel2" 
	            android:gravity="center_vertical"
	            android:layout_weight="3" 
	            android:layout_margin="10.0dip" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:password="false"
	            android:textSize="20sp" 
	            android:hint="使用者名稱" />
	        
        </LinearLayout>
	    
	    <LinearLayout android:weightSum="5" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"
	         android:gravity="center">
	        <TextView 
				android:id="@+id/email1" 
	            android:gravity="center_vertical|right" 
	            android:layout_margin="10.0dip"
	            android:layout_weight="2"
	            android:layout_width="100dp" 
	            android:layout_height="wrap_content"
	            android:textSize="20sp" 
	            android:hint="身分證字號" />
	        
	        <TextView 
				android:id="@+id/email2" 
	            android:gravity="center_vertical"
	            android:layout_weight="3" 
	            android:layout_margin="10.0dip" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:password="false"
	            android:textSize="20sp" 
	            android:hint="使用者名稱" />
	        
        </LinearLayout>
        
    </LinearLayout>
    
	<ImageView
		android:id="@+id/imgmedia" 
	    android:gravity="center" 
	    android:layout_margin="20.0dip" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:scaleType="centerInside"
	    android:layout_gravity="center" />
    
</LinearLayout>